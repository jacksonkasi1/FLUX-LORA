{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./server/*"],
      "@server/config/*": ["./server/config/*"],
      "@server/lib/*": ["./server/lib/*"],
      "@server/types/*": ["./server/types/*"],
      "@server/utils/*": ["./server/utils/*"],
      "@server/services/*": ["./server/services/*"],
      "@/*": ["./src/*"],
      "@/types/*": ["./src/types/*"]
    }
  },
  "include": [
    "server/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/pages",
    "src/hooks",
    "src/contexts",
    "src/lib",
    "src/services"
  ]
}
